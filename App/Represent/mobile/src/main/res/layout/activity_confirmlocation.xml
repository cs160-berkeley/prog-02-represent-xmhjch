<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="bottom"
    android:orientation="vertical"
    tools:context="com.example.hjc.represent.confirmlocation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="You are in ..."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/display_location"
            android:textColor="#000000"
            android:textSize="45sp"
            android:textStyle="bold"
            android:text=""/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_margin="0dp"
>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#333399"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:id="@+id/confirmlocation_b1"
            android:onClick="enter"
            android:text="enter"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmlocation_b2"
            android:padding="20dp"
            android:background="#cc3333"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:onClick="back"
            android:text="back"/>

    </LinearLayout>

</LinearLayout>
